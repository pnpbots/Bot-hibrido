    "integration_apis": {
      "telegram_bot": {
        "base_url": "https://api.telegram.org/bot{{BOT_TOKEN}}",
        "methods": [
          {
            "name": "sendMessage",
            "endpoint": "/sendMessage",
            "parameters": ["chat_id", "text", "parse_mode", "reply_markup"]
          },
          {
            "name": "sendVideo",
            "endpoint": "/sendVideo", 
            "parameters": ["chat_id", "video", "caption", "duration"]
          },
          {
            "name": "getUpdates",
            "endpoint": "/getUpdates",
            "parameters": ["offset", "limit", "timeout"]
          }
        ]
      },
      
      "hubspot_crm": {
        "base_url": "https://api.hubapi.com",
        "endpoints": [
          {
            "name": "create_contact",
            "method": "POST",
            "endpoint": "/crm/v3/objects/contacts",
            "auth": "Bearer {{HUBSPOT_API_KEY}}"
          },
          {
            "name": "get_deals",
            "method": "GET", 
            "endpoint": "/crm/v3/objects/deals",
            "auth": "Bearer {{HUBSPOT_API_KEY}}"
          },
          {
            "name": "create_workflow",
            "method": "POST",
            "endpoint": "/automation/v4/workflows",
            "auth": "Bearer {{HUBSPOT_API_KEY}}"
          }
        ]
      },
      
      "chatgpt_api": {
        "base_url": "https://api.openai.com/v1",
        "endpoints": [
          {
            "name": "chat_completion",
            "method": "POST",
            "endpoint": "/chat/completions",
            "auth": "Bearer {{OPENAI_API_KEY}}",
            "parameters": {
              "model": "gpt-4",
              "messages": [],
              "max_tokens": 1000,
              "temperature": 0.7
            }
          }
        ]
      },
      
      "google_sheets": {
        "base_url": "https://sheets.googleapis.com/v4/spreadsheets",
        "methods": [
          {
            "name": "read_range",
            "endpoint": "/{{SPREADSHEET_ID}}/values/{{RANGE}}",
            "method": "GET"
          },
          {
            "name": "update_range",
            "endpoint": "/{{SPREADSHEET_ID}}/values/{{RANGE}}",
            "method": "PUT"
          },
          {
            "name": "append_data",
            "endpoint": "/{{SPREADSHEET_ID}}/values/{{RANGE}}:append",
